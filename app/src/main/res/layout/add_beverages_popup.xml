<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/addBeveragesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway"
        android:padding="10dp"
        android:text="ADD BEVERAGES"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/addBeveragesPopup_guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="160dp" />

    <TextView
        android:id="@+id/addBeveragesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="NAME"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/addBeveragesPopup_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBeveragesTitle" />

    <EditText
        android:id="@+id/addBeveragesNameFill"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/edit_text_style"
        android:fontFamily="@font/raleway"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/addBeveragesName"
        app:layout_constraintStart_toEndOf="@+id/addBeveragesPopup_guideline"
        app:layout_constraintTop_toTopOf="@+id/addBeveragesName"/>

    <TextView
        android:id="@+id/addBeveragesPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="PRICE"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/addBeveragesPopup_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBeveragesName" />

    <EditText
        android:id="@+id/addBeveragesPriceFill"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/edit_text_style"
        android:fontFamily="@font/raleway"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/addBeveragesPrice"
        app:layout_constraintStart_toEndOf="@+id/addBeveragesPopup_guideline"
        app:layout_constraintTop_toTopOf="@+id/addBeveragesPrice" />

    <Button
        android:id="@+id/button_confirmAddBeverages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addBeveragesPriceFill" />

</androidx.constraintlayout.widget.ConstraintLayout>