<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1256dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_reservationId_data"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

        <View
            android:id="@+id/RVerticalLine1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textview_reservationNoOfPeople_data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

        <View
            android:id="@+id/RVerticalLine2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textview_reservationSurname_data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

        <View
            android:id="@+id/RVerticalLine3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textview_reservationDate_data"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

        <View
            android:id="@+id/RVerticalLine4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textview_reservationTime_data"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

        <View
            android:id="@+id/RVerticalLine5"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/textview_reservationTableNo_data"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/raleway"/>

    </LinearLayout>

    <View
        android:id="@+id/RHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

</LinearLayout>