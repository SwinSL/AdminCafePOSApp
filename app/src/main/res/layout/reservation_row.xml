<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/textview_reservationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/raleway"
                android:text="@string/reservation_id"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textview_reservationId_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textview_reservationId"
                android:textSize="20sp"
                android:fontFamily="@font/raleway"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/textview_reservationSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_reservationId"
                android:layout_alignStart="@id/textview_reservationId"
                android:fontFamily="@font/raleway"
                android:text="@string/surname"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textview_reservationSurname_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textview_reservationSurname"
                android:layout_below="@id/textview_reservationId"
                android:textSize="20sp"
                android:fontFamily="@font/raleway"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/textview_reservationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textview_reservationId"
                android:layout_toStartOf="@id/textview_reservationDate_data"
                android:fontFamily="@font/raleway"
                android:text="@string/date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_reservationDate_data"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:layout_alignBaseline="@id/textview_reservationDate"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_reservationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textview_reservationSurname"
                android:layout_toStartOf="@id/textview_reservationTime_data"
                android:fontFamily="@font/raleway"
                android:text="@string/time"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_reservationTime_data"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:layout_alignBaseline="@id/textview_reservationTime"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>